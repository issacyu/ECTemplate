@using ECTemplate.WebUI.Models

@model OrderDetailViewModel

<div class="row">
    <div class="col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
                <address>
                    <strong>Shipping Address:</strong>
                    <br>
                    @Model.Order.OrderShipAddress
                    <br>
                    @Model.Order.OrderShipAddress2
                    <br>
                    @Model.Order.OrderCity, @Model.Order.OrderState, @Model.Order.OrderZip
                    <br>
                    @Model.Order.OrderCountry
                    <br />
                        
                </address>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                <p>
                    <em><strong>Date: </strong> @Model.Order.OrderDate.ToString("MMMM dd, yyyy")</em>
                </p>
                <p>
                    <em><strong>Order #: </strong>@Model.Order.OrderId</em>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                <h1>Order Detail</h1>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>#</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <tr>
                            <td class="col-md-9"><em>@Model.ProductDetails[orderDetail.DetailProductId]</em></td>
                            <td class="col-md-1" style="text-align: center">@orderDetail.DetailQuantity </td>
                            <td class="col-md-1 text-center">@orderDetail.DetailPrice.ToString("c")</td>
                            <td class="col-md-1 text-center">@((@orderDetail.DetailPrice * @orderDetail.DetailQuantity).ToString("c"))</td>
                        </tr>
                    }
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td class="text-right">
                            <p>
                                <strong>Tax: </strong>
                            </p>
                        </td>
                        <td class="text-center">
                            <p>
                                <strong>$0.00</strong>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td class="text-right"><h4><strong>Total: </strong></h4></td>
                        <td class="text-center text-danger"><h4><strong>@Model.Total.ToString("c")</strong></h4></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body 
    {
        margin-top: 20px;
    }
</style>