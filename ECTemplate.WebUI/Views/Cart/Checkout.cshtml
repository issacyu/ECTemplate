@model ECTemplate.Domain.Entities.Addresses
@{
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}
<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <h3>Ship to</h3>
    <div class="form-group">
        <label>First Name:</label>
        @Html.TextBoxFor(Model => Model.ShippingFirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        @Html.TextBoxFor(Model => Model.ShippingLastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Address 1:</label>
        @Html.TextBoxFor(m => m.ShippingAddress, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Address 2:</label>
        @Html.TextBoxFor(m => m.ShippingAddress2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>City:</label>
        @Html.TextBoxFor(m => m.ShippingCity, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>State:</label>
        @Html.TextBoxFor(m => m.ShippingState, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Zip:</label>
        @Html.TextBoxFor(m => m.ShippingZip, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Country:</label>
        @Html.TextBoxFor(m => m.ShippingCountry, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Phone:</label>
        @Html.TextBoxFor(m => m.ShippingPhone, new { @class = "form-control" })
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete order" />
    </div>
}